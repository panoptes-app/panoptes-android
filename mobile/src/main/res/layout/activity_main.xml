<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tool"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.mackristof.panoptes.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="New Text"
            android:id="@+id/statusText"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal|top|left|center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start on wearable"
            android:id="@+id/mButtonStartWear"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="top|center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start on phone"
            android:id="@+id/mButtonStartPhone"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_gravity="top|center_horizontal" />


    </GridLayout>
</LinearLayout>